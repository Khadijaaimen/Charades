<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/tapioca"
        android:theme="@style/navigation_theme"
        app:menu="@menu/nav_options" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pink_part"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/navBar"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu"
            app:tint="@color/white" />


        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:src="@drawable/charades" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/yellow_part_rect"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/gothic"
                android:gravity="center"
                android:text="@string/sound"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/gothic"
                android:text="@string/on"
                android:textSize="20sp"
                android:theme="@style/navigation_theme" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/gothic"
                android:gravity="center"
                android:text="@string/bonus_time"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/gothic"
                android:text="@string/on"
                android:textSize="20sp"
                android:theme="@style/navigation_theme" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/gothic"
                android:gravity="center"
                android:text="@string/round_time"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/gothic"
                android:text="@string/_60s"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:theme="@style/navigation_theme" />

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>