<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".CelebritiesActivity">

    <TextView
        android:id="@+id/forehead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/vanilla"
        android:gravity="center"
        android:text="@string/please_place_your_device_on_forehead"
        android:textColor="@color/purple_200"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/vanilla"
        android:gravity="center"
        android:text="@string/_5"
        android:textColor="@color/purple_200"
        android:textSize="62sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forehead" />

    <TextView
        android:id="@+id/secondTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vanilla"
        android:gravity="center"
        android:text="@string/_60"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guesses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/vanilla"
        android:gravity="center"
        android:text="@string/guesses"
        android:visibility="gone"
        android:textColor="@color/purple_200"
        android:textSize="62sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>