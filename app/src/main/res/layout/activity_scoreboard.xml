<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ScoreboardActivity">


    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vanilla"
        android:gravity="center"
        android:text="@string/results"
        android:textColor="@color/purple_200"
        android:textSize="42sp"
        app:layout_constraintEnd_toStartOf="@+id/restartButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:src="@drawable/loop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timer"
        app:tint="@color/purple_200"
        tools:layout_conversion_absoluteHeight="45dp"
        tools:layout_conversion_absoluteWidth="45dp"
        tools:layout_editor_absoluteX="666dp"
        tools:layout_editor_absoluteY="20dp" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vanilla"
        android:gravity="center"
        android:text="@string/correct_answers"
        android:textColor="#4CAF50"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vanilla"
        android:gravity="center"
        android:text="@string/incorrect_answers"
        android:textColor="#EA6157"
        android:textSize="22sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/correctAnsRv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/correct_recyclerview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/incorrectAnsRv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/incorrect_recyclerview" />


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vanilla"
                android:gravity="end"
                android:text="@string/total"
                android:textColor="#4B534C"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/totalCountCorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vanilla"
                android:gravity="start"
                android:text="@string/_10"
                android:textColor="#4B534C"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vanilla"
                android:gravity="end"
                android:text="@string/total"
                android:textColor="#4B534C"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/totalCountIncorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vanilla"
                android:gravity="start"
                android:text="@string/_10"
                android:textColor="#4B534C"
                android:layout_marginEnd="30dp"
                android:textSize="19sp" />
        </LinearLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="correctAnsRv, incorrectAnsRv"
        app:flow_horizontalGap="110dp"
        app:flow_maxElementsWrap="2"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="20dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow3"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/timer"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="textView6,textView7"
        app:flow_maxElementsWrap="2"
        android:layout_marginTop="10dp"
        app:flow_horizontalGap="100dp"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="layout1,layout2"
        app:flow_maxElementsWrap="2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/flow2" />
</androidx.constraintlayout.widget.ConstraintLayout>