<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF1EE"
    tools:context=".activities.ScoreboardActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingTop="12dp"
            android:background="@drawable/score_text2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/ic_round_home_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/gothic"
                android:gravity="center"
                android:text="@string/Final"
                android:textColor="@color/white"
                android:textSize="42sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/score"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothic"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:text="@string/_10"
                android:textColor="@color/white"
                android:textSize="42sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/timer2"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothic"
                android:gravity="center"
                android:text="@string/score"
                android:textColor="@color/white"
                android:textSize="42sp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/restartButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/loop"
                app:tint="@color/white" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:gravity="center"
            android:text="@string/correct_answers"
            android:textColor="#4CAF50"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:gravity="center"
            android:text="@string/incorrect_answers"
            android:textColor="#EA6157"
            android:textSize="22sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/correctAnsRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/correct_recyclerview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/incorrectAnsRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toStartOf="@+id/flow2"
            app:layout_constraintStart_toEndOf="@+id/flow2"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:listitem="@layout/incorrect_recyclerview" />


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/gothic"
                android:gravity="end"
                android:text="@string/total"
                android:textColor="#4B534C"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/totalCountCorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothic"
                android:gravity="start"
                android:text="@string/_10"
                android:textColor="#4B534C"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothic"
                android:gravity="end"
                android:text="@string/total"
                android:textColor="#4B534C"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/totalCountIncorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/gothic"
                android:gravity="start"
                android:text="@string/_10"
                android:textColor="#4B534C"
                android:textSize="19sp" />
        </LinearLayout>


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="correctAnsRv, incorrectAnsRv"
            app:flow_maxElementsWrap="2"
            app:flow_horizontalGap="100dp"
            app:layout_constraintTop_toBottomOf="@+id/flow3"
            tools:layout_editor_absoluteX="-16dp" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            app:flow_horizontalGap="120dp"
            app:constraint_referenced_ids="textView6,textView7"
            app:flow_maxElementsWrap="2"
            app:layout_constraintTop_toBottomOf="@+id/linear" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:constraint_referenced_ids="layout1,layout2"
            app:flow_maxElementsWrap="2"
            app:layout_constraintTop_toBottomOf="@id/flow2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>