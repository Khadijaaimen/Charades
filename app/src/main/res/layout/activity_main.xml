<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/navigation_theme"
        android:id="@+id/navView"
        android:layout_gravity="start"
        android:background="@color/teal_700"
        app:headerLayout="@layout/nav_header_layout"
        app:menu="@menu/nav_options" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pink_part"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/navBar"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/guess_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/guess_bg"
            android:fontFamily="@font/hobo"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/guess_the_word"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:src="@drawable/charades" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="false"
            android:background="@drawable/yellow_part"
            android:elevation="@dimen/_5sdp"
            android:paddingTop="@dimen/_20sdp"
            android:paddingStart="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/category_recyclerview"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>